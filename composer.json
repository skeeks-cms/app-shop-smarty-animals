{
    "name": "skeeks/app-shop",
    "description": "Магазин на базе SkeekS CMS",
    "keywords": ["framework", "cms", "skeeks", "sx", "app", "yii2"],
    "homepage": "http://cms.skeeks.com",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "http://cms.skeeks.com",
        "wiki": "http://git.skeeks.com/skeeks/cms/wikis/home",
        "source": "http://git.skeeks.com/skeeks/cms-app"
    },
    "authors": [
        {
            "name": "Semenov Alexander",
            "email": "semenov@skeeks.com"
        }
    ],
    "require": {
        "skeeks/cms": "*",
        "skeeks/cms-shop": "*",
        "skeeks/cms-agent": "*",
        "skeeks/cms-mailer": "*",
        "skeeks/cms-seo": "*",
        "skeeks/cms-search": "*",
        "skeeks/cms-authclient": "*",
        "skeeks/cms-db-dumper": "*",
        "skeeks/cms-module-form2": "*",
        "skeeks/cms-module-reviews2": "*",
        "skeeks/cms-ssh-console": "*",
        "skeeks/cms-vk-comments": "*",
        "skeeks/cms-ya-share": "*",
        "skeeks/cms-vk-community": "*",
        "skeeks/cms-assets-auto-compress": "*",
        "skeeks/yii2-assets-auto-compress": "dev-master",
        "skeeks/yii2-template-smarty-asset": "*",
        "skeeks/cms-external-links": "*",
        "skeeks/cms-log-db-target": "*",
        "kartik-v/yii2-widget-rating": "*",
	    "skeeks/yii2-http-basic-auth": "*",
        "yiisoft/yii2-debug": "*",
        "skeeks/cms-instagram-widget": "*",
        "skeeks/cms-import-csv-content": "*",
        "skeeks/cms-import-csv-shop-content": "*",
        "skeeks/cms-export-csv-content": "*",
        "skeeks/cms-export-shop-yandex-market": "*",
        "skeeks/cms-related-handler-extra": "*"
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true,
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        },
        "writable": [
            "console/runtime",
            "common/runtime",
            "frontend/runtime",
            "frontend/web/assets"
        ],
        "executable": [
            "yii"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "skeeks\\cms\\console\\Composer::postInstall"
        ],
        "post-update-cmd": [
            "skeeks\\cms\\console\\Composer::postUpdate",
            "php yii cms/cache/flush-all",
            "php yii cms/migrate --interactive=0",
            "php yii rbac/init",
            "php yii cmsAgent/init",
            "php yii cms/cache/flush-all"
        ]
    },
    "config": {
        "process-timeout": 1800,
        "discard-changes": true,
        "github-oauth": {"github.com":"6d5599184f19c2932ba93a0cfd4dd3e008a9139c"}
    }
}
